<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/template">


    <ImageView
        android:id="@+id/logo"
        style="@style/logo"
        android:src="@drawable/ic_lo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="@string/app_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:textSize="40dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="315dp"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/re_ime"
            android:hint="@string/re_input_name"
            android:inputType="text"
            android:background="@drawable/inputs_line"
            android:drawableLeft="@drawable/ic_info_outline_black_24dp"
            android:drawablePadding="10dp"
            style="@style/input"
            />

        <EditText
            android:id="@+id/re_prezime"
            android:hint="@string/re_input_prezime"
            android:inputType="text"
            android:background="@drawable/inputs_line"
            android:drawableLeft="@drawable/ic_info_outline_black_24dp"
            android:drawablePadding="10dp"
            style="@style/input" />

        <EditText
            android:id="@+id/re_username"
            android:hint="@string/re_input_username"
            android:inputType="text"
            android:background="@drawable/inputs_line"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:drawablePadding="10dp"
            style="@style/input" />

        <EditText
            android:id="@+id/re_email"
            android:hint="@string/re_input_email"
            android:inputType="text"
            android:background="@drawable/inputs_line"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:drawablePadding="10dp"
            style="@style/input"/>

        <EditText
            android:id="@+id/re_password"
            android:hint="@string/re_input_password"
            android:inputType="textPassword"
            android:background="@drawable/inputs_line"
            android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
            android:drawablePadding="10dp"
            style="@style/input"/>

        <EditText
            android:id="@+id/re_password2"
            android:hint="@string/re_ponovi_lozinku"
            android:inputType="textPassword"
            android:background="@drawable/inputs_line"
            android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
            android:drawablePadding="10dp"
            style="@style/input"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="610dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/register_button"
            android:text= "@string/register_button_text"
            android:background="#ffff00"
            style="@style/YellowButton"/>



    </LinearLayout>

</RelativeLayout>