<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/btnMuzej"
            android:layout_width="@dimen/duljina_gumba_kategorija"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/velicina_margine_gumba_kategorija"
            android:text="Muzej"
            android:tag="1"
            android:background="@drawable/button_yellow"/>

        <Button
            android:id="@+id/btnGalerija"
            android:layout_width="@dimen/duljina_gumba_kategorija"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/velicina_margine_gumba_kategorija"
            android:text="Galerija"
            android:tag="2"
            android:background="@drawable/button_yellow"/>

        <Button
            android:id="@+id/btnSpomenik"
            android:layout_width="@dimen/duljina_gumba_kategorija"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/velicina_margine_gumba_kategorija"
            android:text="Spomenik"
            android:tag="3"
            android:background="@drawable/button_yellow"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/btnSetaliste"
            android:layout_width="@dimen/duljina_gumba_kategorija"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/velicina_margine_gumba_kategorija"
            android:text="Šetalište"
            android:tag="4"
            android:background="@drawable/button_yellow"/>

        <Button
            android:id="@+id/btnKazaliste"
            android:layout_width="@dimen/duljina_gumba_kategorija"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/velicina_margine_gumba_kategorija"
            android:text="Kazalište"
            android:tag="5"
            android:background="@drawable/button_yellow"/>

        <Button
            android:id="@+id/btnKino"
            android:layout_width="@dimen/duljina_gumba_kategorija"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/velicina_margine_gumba_kategorija"
            android:text="Kino"
            android:tag="6"
            android:background="@drawable/button_yellow"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Ovdje gradovi:"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:background="@color/cardview_light_background"/>
    </LinearLayout>
</LinearLayout>